{% extends "layout.njk" %}

{% block head%}
    <title>Cursos - Rocketseat</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet">
{% endblock %}


{% block content %}


<div id="titulo">
    <h1>Conte√∫do</h1>
</div>
    
    
<section class="cards" >
     {% for item in items%}   

    <div class="card" id="{{item.id}}">
            <div  class="card-img">
                <img src="{{item.card_img}}" alt="imagem do {{item.course_name}}">
            </div>
            <div class="nome-curso">
                <p>{{item.course_name}}</p>
            </div>

            <div class="info-curso">
                <p class="valor">{{item.course_value}}</p>
                <p class="modulos">{{item.course_modules}}</p>
            </div>
    </div>

    {% endfor %}


    </section>
    <div id="footer-social" class="links">
        <a href="https://github.com/Rocketseat" target="_blank">Github</a>
        <a href="https://www.instagram.com/rocketseat_oficial/?hl=pt-br" target="_blank">Instagram</a>
        <a href="https://pt-br.facebook.com/rocketseat/" target="_blank">Facebook</a>
    </div>

        
    </div>
    <script src="scripts.js"></script>
    {% endblock %}
