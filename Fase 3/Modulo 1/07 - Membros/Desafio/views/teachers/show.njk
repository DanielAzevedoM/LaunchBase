{% extends "layout.njk" %}

{% block head %}
    <title>Teachers</title>
{% endblock %}

{% block content %}

    <div class="card">
         <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover "></section>
        
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome Completo:</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="item">
                <div>Idade:</div>
                <div>{{teacher.birth}}</div>
            </div>

            <div class="item">
                <div>Escolaridade:</div>
                <div>{{teacher.schooling}}</div>
            </div>

            <div class="item">
                <div>Tipo de Aula:</div>
                <span>{{teacher.typeclass}}</span>
            </div>

             <div class="item">
                <div>Acompanhamento:</div>
                {%for attendance in teacher.attendance%}
                <span>{{attendance}}</span>
                {% endfor %}
            </div>

             <div class="item">
                <div>Desde:</div>
                <div>{{teacher.created_at}}</div>
            </div>

            <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>

        </section>

        

    </div>
    
{% endblock %}