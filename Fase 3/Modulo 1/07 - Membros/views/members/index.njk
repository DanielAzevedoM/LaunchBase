{% extends "layout.njk" %}

{% block head %} 
    <title>Gym Manager | members</title>
{% endblock%}

{% block content %}

    <div class="card table-container">
        <a href="/members/create">Novo</a>

       <table width="100%">
           <thead>
               <tr>
                   <th>member</th>
                   <th>Email</th>
                   <th>Peso</th>
                   <th>Altura</th>
                   <th>Ação</th>
               </tr>
           </thead>
           <tbody>
               {% for member in members %}
                <tr>
                    <td><span style="background-image: url({{member.avatar_url}})"></span> {{member.name}}</td>
                    <td><span class="spanMail">{{member.email}}</span></td>
                    <td>{{member.weight}}<small>kg</small></td>
                    <td>{{member.height}}<small>cm</small></td>
                    <td><a href="/members/{{member.id}}">Ver</a></td>
                </tr>
               {% endfor %}
           </tbody>

       </table>
    </div>
{% endblock %}

