<div class="item">
                <div>Avatar URL</div>
                <div><input type="url" name="avatar_url" placeholder="http://" value="{{student.avatar_url}}"></div>
            </div>

            <div class="item">
                <div>Name:</div>
                <div><input type="text" name="name" placeholder="Insert your name" value="{{student.name}}"></div>
            </div>

            <div class="item">
                <div>Birth:</div>
                <div><input type="date" name="birth" value="{{student.birth}}"></div>
            </div>

            <div class="item">
                <div>Email:</div>
                <div><input type="email" name="email"  value="{{student.email}}"></div>
            </div>

            <div class="item">
                <div>Ano Escolar:</div>
                <div>
                    <select name="schoolYear">
                        <option value="5" {% if student.scoolYear == '5' %}
                        selected{% endif %}>5° ano</option>
                        <option value="6" {% if student.scoolYear == '6' %}
                        selected{% endif %}>6° ano</option>
                        <option value="7" {% if student.scoolYear == '7' %}
                        selected{% endif %}>7° ano</option>
                        <option value="8" {% if student.scoolYear == '8' %}
                        selected{% endif %}>8° ano</option>
                        <option value="9" {% if student.scoolYear == '9' %}
                        selected{% endif %}>9° ano</option>
                        <option value="10" {% if student.scoolYear == '10' %}
                        selected{% endif %}>1° ano médio</option>
                        <option value="11" {% if student.scoolYear == '11' %}
                        selected{% endif %}>2° ano médio</option>
                        <option value="12" {% if student.scoolYear == '12' %}
                        selected{% endif %}>3° ano médio</option>

                    </select>
                </div> 
            </div>

            <div class="item">
                <div>Carga Horária Semanal:</div>
                <div><input type="number" name="workload" max=20 value="{{student.workload}}"></div>
            </div>

           <button type="submit">Salvar</button>